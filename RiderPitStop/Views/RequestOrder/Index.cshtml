@model IEnumerable<RiderPitStop.Models.RequestOrder>

@{
    ViewData["Title"] = "Request Order List";
}

<h1>Request Order List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Request Order</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Prepared By</th>
            <th>Date</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.requestDetails.PreparedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.requestDetails.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.requestDetails.Note)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DetailsId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>
